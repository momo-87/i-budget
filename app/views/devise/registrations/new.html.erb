<div class="w-full">
  <div class="w-full flex bg-color-blue h-[50px] text-white px-3 gap-[30%] py-3 md:px-[5%] md:gap-[45%]">
    <a href="<%= request.referer %>" class="focus:ring-gray-300 focus:ring-2"><i class="fa-solid fa-arrow-left md:text-2xl text-xl"></i></a>
    <h2>REGISTRATION</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field md:w-[50%] mx-auto relative h-[70px] mt-5 px-4 border-t-2 border-gray-300 py-2 bg-white">
      <%= f.file_field :photo, autofocus: true, class: "w-full mt-5 h-[50px] absolute top-0 left-0 opacity-0" %>
      <i class="fa-solid fa-circle-user text-5xl text-gray-400"></i>
      <span class="text-xl text-gray-400 -mt-[40px] ml-[17%] block">Upload picture</span>
    </div>

    <div class="field md:w-[50%] mx-auto">
      <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: "w-full h-[50px]" %>
    </div>
    
    <div class="field md:w-[50%] mx-auto">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full h-[50px]" %>
    </div>

    <div class="field md:w-[50%] mx-auto">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full h-[50px]" %>
    </div>

    <div class="actions -mt-[285px] ml-[88%] py-2">
      <%= f.submit "Next", class: "text-white" %>
    </div>
    <div class="px-5 text-red-500 md:w-[50%] mx-auto mt-[250px]">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  <% end %>
</div>

